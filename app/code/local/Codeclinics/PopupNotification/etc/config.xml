<?xml version="1.0" ?> 
<config>       
      <modules>
            <Codeclinics_PopupNotification>
                  <version>0.0.1</version>
            </Codeclinics_PopupNotification>
      </modules> 
      <frontend>
            <layout>
                  <updates>
                        <popupnotification>
                              <file>popupnotification.xml</file>
                        </popupnotification>
                  </updates>
            </layout>
      </frontend>
	  <global>
        <helpers>
            <popupnotification>
                <class>Codeclinics_PopupNotification_Helper</class>
            </popupnotification>
        </helpers>
	  </global>
	  <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <popupnotification>
                                            <title>Popup Notification</title>
                                        </popupnotification>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>